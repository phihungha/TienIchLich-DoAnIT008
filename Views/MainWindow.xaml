<Window x:Class="TienIchLich.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:TienIchLich.Views"
        xmlns:vm="clr-namespace:TienIchLich.ViewModels"
        mc:Ignorable="d"
        Title="Lịch" Height="650" Width="1100">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MainWorkspaceVM}">
            <views:MainWorkspace />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EventEditorVM}">
            <views:EventEditorView />
        </DataTemplate>
    </Window.Resources>
    
    <!-- Main UI grid -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="275" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Source="/image/back2.jfif" Grid.ColumnSpan="2" Stretch="Fill">
            <Image.Effect>
                <BlurEffect Radius="25"/>
            </Image.Effect>
        </Image>
        <!-- Side panel -->
        <views:SidePanelView Grid.Column="0" DataContext="{Binding CategoryPanelVM}" />

        <!-- Main view -->
        <ContentControl Grid.Column="1" Content="{Binding NavigationVM.DisplayedVM}" />
    </Grid>
</Window>
