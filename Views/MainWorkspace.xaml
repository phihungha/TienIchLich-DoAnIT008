<UserControl x:Class="TienIchLich.Views.MainWorkspace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:TienIchLich.Views"
             xmlns:custom_controls="clr-namespace:TienIchLich.MonthEventCalendarControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Main workspace view -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <Button Command="{Binding AddEventCommand}" 
                    Margin="0,25,30,10"
                    Content="Thêm sự kiện" />

            <Button Grid.Column="1" Command="{Binding SettingsCommand}" 
                    Margin="0,25,10,10"
                    Content="Cài đặt" />
        </Grid>
        
        <TabControl Grid.Row="1" SelectedIndex="1">
            <!-- Upcoming event overview -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Tóm tắt</TextBlock>
                </TabItem.Header>
                <views:UpcomingOverviewView DataContext="{Binding UpcomingOverviewVM}" />
            </TabItem>

            <!-- Calendar month view -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Tháng</TextBlock>
                </TabItem.Header>
                <custom_controls:MonthEventCalendar
                    CalendarVM="{Binding CalendarVM}"
                    SelectedDate="{Binding CalendarVM.SelectedDate}" />
            </TabItem>

            <!-- Calendar year view -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Năm</TextBlock>
                </TabItem.Header>
            </TabItem>

            <!-- Event list view -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Sự kiện</TextBlock>
                </TabItem.Header>
                <views:EventListView DataContext="{Binding EventListVM}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
