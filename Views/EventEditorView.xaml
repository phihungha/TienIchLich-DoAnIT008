<UserControl x:Class="TienIchLich.Views.EventEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TienIchLich.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderThickness="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0">Chủ đề</TextBlock>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,50,15">Nhập chủ đề...</TextBox>

            <TextBlock Grid.Row="1" Grid.Column="0">Thời gian bắt đầu</TextBlock>
            <DatePicker Grid.Row="1" Grid.Column="1" Margin="0,0,500,15"/>

            <TextBlock Grid.Row="2" Grid.Column="0">Thời gian kết thúc</TextBlock>
            <DatePicker Grid.Row="2" Grid.Column="1" Margin="0,0,500,15"/>

            <TextBlock Grid.Row="3" Grid.Column="0">Nhắc nhở trước</TextBlock>
            <ComboBox Grid.Row="3" Grid.Column="1" Margin="0,0,500,15">
                <ComboBoxItem>1 tiếng</ComboBoxItem>
                <ComboBoxItem>2 tiếng</ComboBoxItem>
            </ComboBox>

            <TextBlock Grid.Row="4" Grid.Column="0">Mô tả</TextBlock>
            <TextBox Grid.Row="4" Grid.Column="1"/>

            <Grid Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Padding="8,4,8,4" Margin="5,0,5,0" Content="Lưu" />
                <Button Command="{Binding CancelCommand}" Grid.Column="0" Padding="8,4,8,4" Margin="5,0,5,0" Content="Hủy" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
