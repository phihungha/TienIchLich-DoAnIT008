<UserControl x:Class="TienIchLich.Views.EventEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Resources>

    <Border BorderThickness="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                       Margin="0,0,0,20" FontSize="24" >Chỉnh sửa sự kiện</TextBlock>

            <TextBlock Grid.Row="1" Grid.Column="0" FontSize="15">Chủ đề</TextBlock>
            <TextBox Text="{Binding Subject}" Grid.Row="1" Grid.Column="1" 
                     Margin="0,0,50,15" FontSize="20" />

            <TextBlock Grid.Row="2" Grid.Column="0">
                Bắt đầu lúc
            </TextBlock>
            <xctk:DateTimePicker Grid.Row="2" Grid.Column="1" Margin="0,0,190,15" 
                                 Format="Custom" FormatString="dddd, dd MMMM yyyy HH:mm"
                                 Value="{Binding StartTime}" />

            <TextBlock Grid.Row="3" Grid.Column="0">
                Kết thúc lúc
            </TextBlock>
            <xctk:DateTimePicker Grid.Row="3" Grid.Column="1" Margin="0,0,190,15" 
                                 Format="Custom" FormatString="dddd, dd MMMM yyyy HH:mm"
                                 Value="{Binding EndTime}" />

            <TextBlock Grid.Row="4" Grid.Column="0">
                Cả ngày
            </TextBlock>
            <CheckBox Grid.Row="4" Grid.Column="1" 
                      VerticalAlignment="Center" Margin="0,0,0,15" 
                      IsChecked="{Binding AllDay}" />

            <TextBlock Grid.Row="5" Grid.Column="0">Nhắc nhở trước</TextBlock>
            <ComboBox Grid.Row="5" Grid.Column="1" Margin="0,0,300,15">
                <ComboBoxItem>1 tiếng</ComboBoxItem>
                <ComboBoxItem>2 tiếng</ComboBoxItem>
                <ComboBoxItem>6 tiếng</ComboBoxItem>
                <ComboBoxItem>12 tiếng</ComboBoxItem>
                <ComboBoxItem>1 ngày</ComboBoxItem>
                <ComboBoxItem>1 tuần</ComboBoxItem>
                <ComboBoxItem>Tùy chọn</ComboBoxItem>
            </ComboBox>

            <TextBlock Grid.Row="6" Grid.Column="0">Loại lịch</TextBlock>
            <ComboBox  ItemsSource="{Binding CalendarCategories}" 
                       SelectedItem="{Binding CalendarCategory}"
                       Grid.Row="6" Grid.Column="1" Margin="0,0,300,15">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" 
                                     Margin="2" Fill="{Binding DisplayColor}" />
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <TextBlock Grid.Row="7" Grid.Column="0" 
                       VerticalAlignment="Top">Mô tả</TextBlock>
            <TextBox Grid.Row="7" Grid.Column="1" 
                     Margin="0,0,150,15" TextWrapping="Wrap"
                     Text="{Binding Description}" />

            <Grid Grid.Row="8" Grid.Column="1" HorizontalAlignment="Right" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Command="{Binding CancelCommand}" Grid.Column="0" Padding="8,4,8,4" Margin="5,0,5,0" Content="Hủy" />
                <Button Command="{Binding SaveCommand}" Grid.Column="1" Padding="8,4,8,4" Margin="5,0,5,0" Content="Lưu" />
                <Button Command="{Binding DeleteCommand}" Grid.Column="2" Padding="8,4,8,4" Margin="5,0,5,0" Content="Xóa" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
